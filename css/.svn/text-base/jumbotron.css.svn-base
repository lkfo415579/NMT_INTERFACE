/* Move down content because we have a fixed navbar that is 50px tall */
body { padding-top: 75px;  padding-bottom: 20px;}
.ui-widget {font-size:0.9em;}
.ui-menu { position: absolute; width: 180px; }
label {margin-bottom:0;}
textarea.animated {margin:20px 0 10px;padding:8px;width:100%;height:154px;border:1px solid #DDDDDD;background:none;}
.animated:hover {border-color:#ccc;}
#footer {position:absolute;bottom:0;}
.ui-state-default.btn-primary { background:none; background-color: #428BCA; border-color: #357EBD; color: #FFFFFF;margin-left:50px;}
.row {margin-bottom:200px;}
.trans_target {min-height:154px;background:#f5f5f5;color:#222;margin-top:20px;padding:8px;}
.ui-state-default.btn-primary:hover,
.ui-state-default.btn-primary:focus,
.ui-state-default.btn-primary:active,
.ui-state-default.btn-primary.active {
  color: #ffffff;
  background-color: #3276b1;
  border-color: #285e8e;
}
#upload_form {margin-top:10px;display:none;}
#trans_target span {}
.trans_target_highlight {background-color:#ffff00;border-radius:0.5em; cursor:pointer;padding:2px 3px;margin:-2px -3px;color:#000;}
#trans_source {position:relative;}
#source_layer {background-color: #FFFFFF; color: #FFFFFF; position: absolute; word-wrap: break-word;z-index: -1;-moz-box-sizing: content-box; width: 100%; min-height: 154px; left: 0px; top: 0px; padding: 8px; }
.trans_source_highlight {background-color:#ffff00;color:#ffff00; border-radius: 0.5em; margin: -2px -3px;padding: 2px 3px;}
.col-lg-6 .ui-menu {z-index:1;}
.notice {margin-top:20px;}
#example {display:none;}
.container {width:1280px;}
